# DMA RAG System - Environment Configuration Sample
# Copy this file to .env and fill in your actual API keys and configuration

# =============================================================================
# API KEYS - REQUIRED
# =============================================================================

# Pinecone Vector Database API Key
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Google Generative AI API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# PINECONE CONFIGURATION
# =============================================================================

# Pinecone Index Name (will be created if doesn't exist)
PINECONE_INDEX_NAME=dma-knowledge-base-v3

# Pinecone Cloud Provider (aws, gcp, azure)
PINECONE_CLOUD=aws

# Pinecone Region
PINECONE_REGION=us-east-1

# Pinecone Metric for similarity search (cosine, euclidean, dotproduct)
PINECONE_METRIC=cosine

# =============================================================================
# EMBEDDING MODEL CONFIGURATION
# =============================================================================

# Embedding model to use (intfloat/e5-base-v2 is recommended)
EMBEDDING_MODEL=intfloat/e5-base-v2

# Device for embedding model (cpu, cuda, auto)
EMBEDDING_DEVICE=cpu

# Embedding dimension (768 for e5-base-v2)
EMBEDDING_DIMENSION=768

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Gemini model to use
GEMINI_MODEL=gemini-2.0-flash

# Temperature for response generation (0.0 to 1.0)
GEMINI_TEMPERATURE=0.1

# Maximum output tokens
GEMINI_MAX_OUTPUT_TOKENS=2048

# =============================================================================
# RAG SYSTEM CONFIGURATION
# =============================================================================

# Number of top results to retrieve from vector database
TOP_K_RETRIEVAL=20

# Final number of chunks to use for context
FINAL_CONTEXT_LIMIT=8

# Minimum similarity threshold for relevance
MIN_SIMILARITY_THRESHOLD=0.3

# Context window limit in characters
CONTEXT_WINDOW_LIMIT=6000

# =============================================================================
# CHUNKING CONFIGURATION
# =============================================================================

# Maximum chunk size for text processing
MAX_CHUNK_SIZE=512

# Minimum chunk size
MIN_CHUNK_SIZE=100

# Chunk overlap size
CHUNK_OVERLAP=50

# Semantic similarity threshold for chunk coherence
SEMANTIC_THRESHOLD=0.5

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=5000

# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable CORS for all origins (true/false)
CORS_ENABLED=true

# =============================================================================
# DATA PROCESSING CONFIGURATION
# =============================================================================

# Base directory for the project
BASE_DIR=/home/stark/Desktop/DMA_BOT

# Directory for final processed data
FINAL_DATA_DIR=/home/stark/Desktop/DMA_BOT/final_data

# Directory for optimized data
OPTIMIZED_DATA_DIR=/home/stark/Desktop/DMA_BOT/optimized_data

# Directory for models
MODEL_DIR=/home/stark/Desktop/DMA_BOT/models

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================

# Base URL for DMA website
DMA_BASE_URL=https://mahadma.maharashtra.gov.in

# Delay between scraping requests (seconds)
SCRAPING_DELAY=1.0

# Maximum pages to scrape per URL (null for unlimited)
MAX_PAGES_PER_URL=null

# User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (null for console only)
LOG_FILE=null

# Enable detailed logging (true/false)
DETAILED_LOGGING=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Batch size for embedding processing
BATCH_SIZE=8

# Maximum memory usage percentage (0.0 to 1.0)
MAX_MEMORY_USAGE=0.7

# Enable GPU acceleration (true/false)
GPU_ENABLED=false

# Number of worker threads
WORKER_THREADS=4

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for session management
SECRET_KEY=your_secret_key_here_change_this_in_production

# Enable HTTPS (true/false)
HTTPS_ENABLED=false

# SSL certificate path (if HTTPS enabled)
SSL_CERT_PATH=null

# SSL key path (if HTTPS enabled)
SSL_KEY_PATH=null

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Enable performance monitoring (true/false)
MONITORING_ENABLED=true

# Enable query analytics (true/false)
ANALYTICS_ENABLED=true

# Analytics database URL (if using external analytics)
ANALYTICS_DB_URL=null

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Enable automatic backups (true/false)
BACKUP_ENABLED=false

# Backup frequency in hours
BACKUP_FREQUENCY=24

# Backup directory
BACKUP_DIR=/home/stark/Desktop/DMA_BOT/backups

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development mode (true/false)
DEVELOPMENT_MODE=false

# Enable hot reload (true/false)
HOT_RELOAD=false

# Enable verbose error messages (true/false)
VERBOSE_ERRORS=false

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add any custom configuration variables here
# CUSTOM_VAR1=value1
# CUSTOM_VAR2=value2

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Always use env.sample as a template
# 3. Replace all placeholder values with actual configuration
# 4. Test your configuration before deploying to production
# 5. Keep your API keys secure and rotate them regularly
# 6. Use environment-specific .env files for different deployments

